<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/parent_layout">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arsenal"
            android:id="@+id/teamName"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/leftIcon"
            android:layout_marginRight="10dp"
            android:textSize="17sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/premier"
            android:id="@+id/leftIcon"
            android:layout_toLeftOf="@id/scoreLeft"
            android:layout_marginRight="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/scoreLeft"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/minus"
            android:layout_marginRight="5dp"
            android:textSize="17sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/minus"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="17sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/scoreRight"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/minus"
            android:layout_marginLeft="5dp"
            android:textSize="17sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/premier"
            android:id="@+id/right_icon"
            android:layout_toRightOf="@id/scoreRight"
            android:layout_marginLeft="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arsenal"
            android:id="@+id/teamNameRight"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/right_icon"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"/>




</RelativeLayout>